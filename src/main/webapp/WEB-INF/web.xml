<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">
    <!--SERVLET-->
    <servlet>
        <display-name>Acceuil</display-name>
        <servlet-name>Acceuil</servlet-name>
        <servlet-class>com.siteStreaming.SiteStreaming.Acceuil.Acceuil</servlet-class>
    </servlet>
    
    <servlet-mapping>
        <servlet-name>Acceuil</servlet-name>
        <url-pattern>/Acceuil</url-pattern>
    </servlet-mapping>
    
    <servlet>
        <display-name>Inscription</display-name>
        <servlet-name>Inscription</servlet-name>
        <servlet-class>com.siteStreaming.SiteStreaming.Acceuil.Inscription</servlet-class>
    </servlet>
    
    <servlet-mapping>
        <servlet-name>Inscription</servlet-name>
        <url-pattern>/Acceuil/Inscription</url-pattern>
    </servlet-mapping>

    <servlet>
        <display-name>Profil</display-name>
        <servlet-name>Profil</servlet-name>
        <servlet-class>com.siteStreaming.SiteStreaming.ProfilUser.Profil</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>Profil</servlet-name>
        <url-pattern>/Profil</url-pattern>
    </servlet-mapping>

    <servlet>
        <display-name>LogOut</display-name>
        <servlet-name>LogOut</servlet-name>
        <servlet-class>com.siteStreaming.SiteStreaming.Acceuil.LogOut</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>LogOut</servlet-name>
        <url-pattern>/LogOut</url-pattern>
    </servlet-mapping>

    <servlet>
        <display-name>Administration</display-name>
        <servlet-name>PageWebAdministration</servlet-name>
        <servlet-class>com.siteStreaming.SiteStreaming.PageWebAdmin.PageWebAdministration</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>PageWebAdministration</servlet-name>
        <url-pattern>/Administration</url-pattern>
    </servlet-mapping>


    <!--FILTER-->
    <!--Filtre utilisateur non connecté-->

    <filter>
        <filter-name>NonConnectedUser</filter-name>
        <filter-class>com.siteStreaming.SiteStreaming.Access.NonConnectedUserFilter</filter-class>
    </filter>

    <filter-mapping>
        <filter-name>NonConnectedUser</filter-name>
        <servlet-name>Profil</servlet-name>
        <dispatcher>REQUEST</dispatcher>
    </filter-mapping>
    <!--Filtre utilisateur connecté-->
    <filter>
        <filter-name>ConnectedUser</filter-name>
        <filter-class>com.siteStreaming.SiteStreaming.Access.ConnectedUserFilter</filter-class>
    </filter>

    <filter-mapping>
        <filter-name>ConnectedUser</filter-name>
        <servlet-name>Inscription</servlet-name>
        <dispatcher>REQUEST</dispatcher>
    </filter-mapping>
</web-app>